@model KompiuteriuPardavimas.Models.Tiekejas

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Tiekejo sukūrimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-ce" }) )
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	@* add hidden form fields for non-visible properties, otherwise they will get lost in code that handles button presses *@
	@Html.HiddenFor(m => m.Id)
	<fieldset>
		<legend class="text-center">Tiekejas</legend>

		<div class="form-group">
			@Html.LabelFor(m => m.Pavadinimas)
			@Html.EditorFor(m => m.Pavadinimas)
			@Html.ValidationMessageFor(m => m.Pavadinimas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Adresas)
			@Html.EditorFor(m => m.Adresas)
			@Html.ValidationMessageFor(m => m.Adresas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Telefonas)
			@Html.EditorFor(m => m.Telefonas)
			@Html.ValidationMessageFor(m => m.Telefonas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.ElPastas)
			@Html.EditorFor(m => m.ElPastas)
			@Html.ValidationMessageFor(m => m.ElPastas, "")
		</div>

	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>