@model IEnumerable<KompiuteriuPardavimas.Models.UzsakymasL>

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Uzsakymai (F1)"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

@* content itself *@
<div class="main-content-lst">
	<table class="entity-list">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(m => m.Id)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.UzsakymoData)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Darbuotojas)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Pirkejas)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(m => item.Id)
				</td>
				<td>
					@Html.DisplayFor(m => item.UzsakymoData)
				</td>
				<td>
					@Html.DisplayFor(m => item.Darbuotojas)
				</td>
				<td>
					@Html.DisplayFor(m => item.Pirkejas)
				</td>
				<td>
					<a 
						href="@Url.Action("Edit", new { id = item.Id })" 
						class="btn btn-primary"
						><i class="fa-solid fa-pen-to-square"></i> Edit (F2)</a>
						
					<a 
						href="@Url.Action("Delete", new { id = item.Id })" 
						class="btn btn-danger"
						><i class="fa-solid fa-trash"></i> Remove</a>					
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>